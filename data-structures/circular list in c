#include <stdio.h>
#include <stdlib.h>
struct Node
{
    int INFO;                      
    struct Node *NEXT;     
};

struct Node * list(int n);
void show(struct Node *START);        
int main()
{
    int n;
	printf("Enter the number of Nodes=");
    scanf("%d", &n);
    struct Node *START=list(n);
    show(START);
    return 0;
}
struct Node *list(int n)
{
    struct Node * START,*New_Node, *temp;
	int num, i;
    START = (struct Node *)malloc(sizeof(struct Node));
    printf("Entry the value of Node1=");
    scanf("%d", &num);
    START->INFO = num;
    START->NEXT =START;
    temp = START;
    for(i=2; i<=n; i++)
        {
            New_Node = (struct Node *)malloc(sizeof(struct Node));
            printf("Entry the value of Node%d=",i);
            scanf("%d", &num);
            New_Node->INFO = num;
            New_Node->NEXT=START;
            temp->NEXT = New_Node;
            temp = temp->NEXT;
        }
    return temp;
}
void show(struct Node *START)
{
    struct Node *temp;
    printf("Linked list is=\n" );
    temp = START;
    do
    {
        printf("%d\n",temp->NEXT->INFO);
        temp=temp->NEXT;
    }
    while(temp->NEXT!=START->NEXT);
}
